<UserControl x:Class="Wpf_exo.q9"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf_exo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="tableau">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="first" >0,0</Button>
        <Button Name="second" Grid.Column="1" Grid.Row="1" >1,1</Button>
        <Button Name="third" Grid.Column="0" Grid.Row="2" >0,2</Button>
        <Button Name="fourth"  Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2">2,2</Button>
        <Button Name="fifth"  Grid.Column="3" Grid.Row="3">3,3</Button>
    </Grid>
</UserControl>
